@model IEnumerable<AutoTest.Models.BusinessEntity>

@{
    ViewBag.Title = "BusinessEntity";
}

<h2>BusinessEntity</h2>

<p>
    @Html.ActionLink("Create New", "Create", "BusinessEntities", new { }, new { @class = "dialog-window btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BusinessEntityName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessEntityName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BusinessEntityID }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "Details", new { id = item.BusinessEntityID }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.BusinessEntityID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h2 class="modal-title"></h2>
            </div>
            <div class="modal-body"><div class="te">Please wait...</div></div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>
    $(document).ready(function () {
    $("body").on("click", "a.dialog-window", null, function (e) {
        e.preventDefault();
        var $link = $(this);
        var title = $link.text();
        $('#Create .modal-title').html(title);
        var url = $(this).attr('href');
        if (url.indexOf('#') == 0) {
            $('#Create').modal('show');
        }
        else {
            $.get(url, function (data) {
                $('#Create .te').html(data);
                $('#Create').modal();
            }).success(function () { $('input:text:visible:first').focus(); });

        }
    });
});

</script>
}
